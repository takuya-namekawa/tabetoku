<% if @genre_items.first %>
  <div class="container mt-4 mb-3">
    <div class="row">
      <div class="col-12">
        <h4 class="text-center font-weight-bold " style="color: #6e470c; ">
          <%= @genre.name %>の検索結果
        </h4>
      </div>
    </div>
  </div>
  <div class="container-fluid  mb-4 ">
    <div class="row">
      <% @genre_items.each do |genre| %>
        <div class="col-12 col-md-4 col-lg-3">
          <div class="card mb-7 shadow-sm">
            <div class="card-img-top d-block overflow-hidden">
              <div class="text-center position-relative">
                <div class="img_wrap">
                  <%= link_to item_path(genre.id) do %>
                    <%= image_tag genre.get_profile_image(250,250) %>
                  <% end %>
                </div>
                <p class="font-weight-bold">
                  <%= link_to  admin_path(genre.admin) , class: "text-decoration-none text-reset" do %>
                    <%= image_tag genre.admin.get_profile_image(50,50) , class: "rounded-circle"%>
                    <%= genre.admin.name %>
                  <% end %>
                </p>
                <p class="font-weight-bold"><%= genre.name %></p>
                <p class="font-weight-bold">
                  半額価格<%= genre.half_price %>円
                  残り<%= genre.inventory %>個
                </p>
                <% if genre.is_ordered? %>
                  <div class="text-success font-weight-bold">Sale</div>
                <% else %>
                  <div class='text-danger font-weight-bold'>Sold-Out</div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <% else %>
  <div class="container mt-5  pb-4">
    <div class="row">
      <div class="col-12">
        <h4 class="text-center font-weight-bold " style="color: #6e470c; ">
          <%= @genre.name %>の検索結果
        </h4>
      </div>
    </div>
  </div>
  <div class="container">
  	<div class="row">
  	  <div class="col-6 offset-md-3  pt-5  pb-5  text-center mb3  shadow-sm bg-white  border border-5 ">
  	    <h5><%= @genre.name %>のジャンルの商品がありませんでした</h5>
      </div>
    </div>
    <div class="container mt-4 mb-4">
      <div class="row">
        <div class="col-12">
          <p class="text-center font-weight-bold border-bottom  border-dark" style="color: #6e470c; ">
            ジャンル一覧から探す
          <p>
        </div>
      </div>
    </div>
    <%= render "/public/items/genre_list", genres: @genres %>
  </div>
<% end %>


