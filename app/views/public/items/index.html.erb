
<div class="container pt-2 pb-4">
  <div class="row">
    <div class="col-12">
      <img src="/assets/page.top2.jpg" class="img-fluid  rounded mx-auto d-block " alt="Responsive image">
        <div class="d-flex justify-content-center align-items-center card-img-overlay">
          <div class="col">
             <h2 class="text-center font-weight-bold">商品一覧</h2>
          </div>
        </div>
    </div>
  </div>
</div>
<div class="container-fluid  mb-4">
  <div class="row">
    <% @items.each do |item| %>

      <div class="col-12 col-md-4 col-lg-3">
        <div class="card mb-7 shadow-sm">
          <div class="card-img-top d-block overflow-hidden">
            <div class="text-center position-relative">
              <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_profile_image(250,250)%>
              <% end %><br>
              <%= item.name %><br>
              半額の<%= item.half_price %>円
              残り<%= item.inventory %>個
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

