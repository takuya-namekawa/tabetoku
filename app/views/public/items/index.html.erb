<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center font-weight-bold" style="color: #6e470c; ">
      商品一覧</h4>
    </div>
  </div>
</div>
<div class="container ">
  <%= render 'all_search' ,  search:  @search %>
 </div>
<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <p class="text-center font-weight-bold border-bottom  border-dark" style="color: #6e470c; ">
      ジャンル一覧<p>
    </div>
  </div>
</div>
<%= render "genre.list", genres: @genres %>
<div class="container-fluid  mb-4">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-12 col-md-4 col-lg-3">
        <div class="card mb-7 shadow-sm">
          <div class="card-img-top d-block overflow-hidden">
            <div class="text-center position-relative">
              <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_profile_image(250,250)%>
              <% end %><br>
              <p class="font-weight-bold">
                <%= image_tag item.admin.get_profile_image(50,50), class: "rounded-circle"%>
                <%= item.admin.name %>
              </p>
              <p class="font-weight-bold"><%= item.name %></p>
              <p class="font-weight-bold">
                半額価格<%= item.half_price %>円
                残り<%= item.inventory %>個
              </p>
              <% if item.is_ordered? %>
								<div class="text-success font-weight-bold">Sale</div>
							<% else %>
								<div class='text-secondary font-weight-bold'>Sold-Out</div>
							<% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

