  <div class="row">
    <div class="col">
      <div class="text-center ">
        <h2 class="font-weight-bold">新 着 商 品</h2>
           <% @items.first(5).each do |item| %>
             <%= link_to  item_path(item.id)  , class: "text-decoration-none" do %>
             <%= image_tag item.get_profile_image(200, 200) %>
             <% end %>
          <% end %>
          <div class="col">
            <div class="text-right pt-3 pb-3">
               <%= link_to "全ての商品を見る>", items_path, class: " text-reset"%>
