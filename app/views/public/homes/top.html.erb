<div class="container  pt-3">
  <div class="row">
    <div class="col-12">
      <div class="sub-main">
        <img src= <%= asset_path 'top.jpg' %> class="img-fluid  rounded mx-auto d-block " alt="Responsive image">
        <div class="mask">
	      	<div class="caption">もったいない‥を<br>無くしたい<br><br>少しでもフードロスを<br>減らすことは出来ないか<br><br>そんな想いから<br>食べトクは生まれました<br>会員登録は無料です<br>是非ご利用ください</div>
      	</div>
      </div>
    </div>
  </div>
</div>
<div class="container mt-5">
  <%= render 'public/items/all_search' ,  search:  @search %>
</div>
<div class="container mt-4 mb-2">
  <div class="row">
    <div class="d-none d-md-block col-md-3">
      <p class="text-center font-weight-bold border-bottom  border-dark " style="color: #6e470c; ">
        ジャンルから探す
      </p>
      <div class="card">
        <% @genres.each do |genre| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-center" style="color: #6e470c; "> <%= link_to  item_genre_items_path(genre) , class: "text-decoration-none text-reset" do %>
              <i class="fas fa-tag"></i></i> <%= genre.name %>
            <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-md-9 text-center">
      <p class=" font-weight-bold border-bottom  border-dark " style="color: #6e470c; ">
        新しく登録された商品
      </p>
      <% @items.first(10).each do |item| %>
         <%= link_to  item_path(item.id)  , class: "text-decoration-none" do %>
          <%= image_tag item.get_profile_image(150, 150) %>
         <% end %>
      <% end %>
      <div class="col">
        <div class="text-right pt-3 pb-3">
          <%= link_to "全ての商品を見る →", items_path, class: " text-reset font-weight-bold"%>
        </div>
         <p class=" font-weight-bold border-bottom  border-dark " style="color: #6e470c; ">
           お店(新着順)
         </p>
         <% @admins.first(6).each do |admin| %>
           <%= link_to  admin_path(admin) , class: "text-decoration-none" do %>
             <%= image_tag admin.get_profile_image(120, 120) , class: "mr-1" %>
           <% end %>
         <% end %>
         <div class="text-right pt-3 pb-3">
          <%= link_to "全てのお店を見る →", shops_admins_path, class: " text-reset font-weight-bold"%>
        </div>
      </div>
    </div>
  </div>
</div>

