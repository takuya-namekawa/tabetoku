<% if  @customer.errors.any? %>
 <ul class="text-center alert alert-danger"style=" list-style: none; ">
  <%=  @customer.errors.count %>件のエラーが発生しました
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container pt-3 mb-1 pb-5 ">
  <h2 class="text-center pb-4 pt-3">会員編集</h2>
  <div class="row ">
    <div class=" col-6 offset-md-3">
      <%= form_with model: @customer, url: customer_path(@customer) do |f| %>
        <form>
          <div class="form-group row">
            <%= f.label :会員名,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4">
              <%= f.text_field :name, autofocus: true, class:"form-control "%>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :フリガナ,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4">
              <%= f.text_field :name_kana, autofocus: true, class:"form-control"%>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :電話番号,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4 ">
              <div class="form-check-inline">
              <%= f.text_field:phone_number, autofocus: true, class:"form-control "%>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :メールアドレス,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4 ">
              <div class="form-check-inline">
              <%= f.email_field :email, autofocus: true, class:"form-control "%>
              </div>
            </div>
          </div>
          <div class="text-center pt-3">
            <%= f.submit " 会員情報を編集する " ,class: "btn btn-danger" %>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>
