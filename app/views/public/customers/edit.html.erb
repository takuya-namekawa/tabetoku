<h1>Public::Customers#edit</h1>
<p>Find me in app/views/public/customers/edit.html.erb</p>
<%= form_with model: @customer, url: customer_path(@customer) do |f| %>
  <%= f.label :"名前" %>
  <%= f.text_field :name %>
  <%= f.label :"フリガナ" %>
  <%= f.text_field :name_kana %>
  <%= f.label :"電話番号" %>
  <%= f.text_field :phone_number %>
  <%= f.label :"メールアドレス"%>
  <%= f.email_field :email %>
  <%= f.submit "編集内容を保存"%>
<% end %>