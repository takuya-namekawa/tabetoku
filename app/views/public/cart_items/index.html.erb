<% if @cart_items.first %>
<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <p class="text-center font-weight-bold " style="color: #6e470c; "><i class="fas fa-shopping-cart "></i>
      以下のお店のカートに商品が入っています<p>
    </div>
  </div>
</div>
<div class="container pb-3">
  <div class="row">
    <div class="ml-auto pt-3 pb-3">
      <%= link_to  all_destroy_cart_items_path, method: :delete, data: {confirm: "カートを空にします。よろしいでしょうか？"}, class: " text-reset" do %>
      <i class="fas fa-shopping-cart "></i> カートを空にする
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table bg-white border border-5 shadow-sm">
      <thead>
        <tr>
          <th>店舗</th>
          <th>商品</th>
          <th>商品名</th>
          <th>数量</th>
          <th>提供価格(税込)</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.admin.get_profile_image(100,100)%></td>
              <td><%= image_tag cart_item.item.get_profile_image(120,120)%></td>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.amount %>個</td>
              <td><%= cart_item.item.half_price %>円</td>
              <td><%= (cart_item.item.half_price).floor * cart_item.amount %>円</td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item)  do |f| %>
                <%= f.hidden_field :item_id, value: cart_item.item.id %>
              <% end %>
              <td><%= link_to "削除" , cart_item_path(cart_item), method: :delete, data: {confirm: "本当に消しますか？"}, class: " text-reset font-weight-bold" %></td>
            </tr>
        <% end %>
      </tbody>
      </table>
        <div class="container text-center  bg-white  pt-4 pb-4  border border-5 shadow-sm">
          <div class="row">
            <div class="col-4"><%= link_to "買い物を続ける", items_path , class: " text-reset font-weight-bold"%></div>
            <div class="col-4"><%= link_to "情報入力に進む",  confirm_path, class: "btn btn-danger btn-block" %></div>
            <h5 class="col-4"> 合計金額 <%= @total_price %>円</h5>
          </div>
        </div>
        </div>
  <% else %>
      	<div class="container  bg-white m-5 pt-5 pb-5 border border-5">
      		<h5 class="text-center mb3 ">カートに商品が入っていません</h5>
      		<div class="text-center pt-3 ">
      			<%= link_to "商品一覧を見る", items_path , class: "text-reset"%>
      		</div>
  	    </div>
<% end %>
</div>
<div class="container mt-4 mb-2">
  <div class="row">
    <div class="col-12">
      <p class="text-center font-weight-bold border-bottom  border-dark " style="color: #6e470c; "><i class="fas fa-shopping-cart "></i>
      新しく登録された商品</p>

    <% @items.first(10).each do |item| %>

       <%= link_to  item_path(item.id)  , class: "text-decoration-none " do %>
       <%= image_tag item.get_profile_image(100, 100) , class: "mr-1"%>
       <% end %>

    <% end %>
    </div>
  </div>
</div>