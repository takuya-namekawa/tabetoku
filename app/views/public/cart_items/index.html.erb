<h2 class="mt-3 text-center">ショッピングカート</h2>
<div class="container">
  <div class="row">
    <div class="ml-auto">
    <%= link_to "全て削除" , all_destroy_cart_items_path, method: :delete, data: {confirm: "本当に消しますか？"} %>
    </div>
  </div>

  <div class="row">
    <table class="col-md-12 table table-hover table-bordered">
      <thead>
        <tr>
          <th>店舗</th>
          <th>商品</th>
          <th>商品名</th>
          <th>数量</th>
          <th>提供価格</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
<% @cart_items.each do |cart_item| %>
<tr>
<td><%= image_tag cart_item.item.admin.get_profile_image(100,100)%></td>
<td><%= image_tag cart_item.item.get_profile_image(100,100)%></td>
<td><%= cart_item.item.name %></td>

<td><%= cart_item.amount %></td>
<td><%= cart_item.item.half_price %></td>
<td><%= (cart_item.item.half_price).floor * cart_item.amount %></td>
<%= form_with model: cart_item, url: cart_item_path(cart_item)  do |f| %>
<%= f.hidden_field :item_id, value: cart_item.item.id %>
<% end %>


<td><%= link_to "削除" , cart_item_path(cart_item), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
<% end %>

 </tr>
  </tbody>
    </table>
  </div>
合計金額<%= @total_price %>
