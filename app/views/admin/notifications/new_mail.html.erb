<div class="container mt-5 mb-4 ">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center font-weight-bold" style="color: #6e470c; ">
      メール送信画面</h4>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with url: admin_notification_send_mail_path(@notice_record),method: :get, local: true do |f| %>
        <div class="form-group">
          <%= f.label :タイトル ,class: "font-weight-bold"%>
          <%= f.text_field :mail_title,class:'form-control'%>
        </div>
        <div class="form-group">
          <%=f.label:本文 ,class: "font-weight-bold"%>
          <%= f.text_area :mail_content, rows: '8',class:'form-control' %>
        </div>
        <div class="text-center mb-4">
          <%= f.submit'メールを送信する',class: "btn btn-secondary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>