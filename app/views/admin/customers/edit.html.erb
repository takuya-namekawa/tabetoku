<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center font-weight-bold " style="color: #6e470c; ">
      会員編集</h4>
    </div>
  </div>
</div>
<div class="container pt-3">
 <div class="row">
    <div class=" col-6 offset-md-3">
      <%= form_with model: @customer, url:  admin_customer_path(@customer) do |f| %>
        <form>
          <div class="form-group row">
            <%= f.label :会員名,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4">
              <%= f.text_field :name, autofocus: true, class:"form-control "%>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :フリガナ,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4">
              <%= f.text_field :name_kana, autofocus: true, class:"form-control"%>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :メールアドレス,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4 ">
              <%= f.email_field :email, autofocus: true, class:"form-control " %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :電話番号,class: "col-sm-3 col-form-label" %>
            <div class="col-sm-9 pl-4 ">
              <%= f.text_field :phone_number, autofocus: true, class:"form-control" %>
            </div>
          </div>
          <div class="form-group row ">
            <%= f.label :会員ステータス,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4">
              <div class="form-check form-check-inline">
                <%= f.radio_button :is_active, true, checked: true %>会員
             </div>
             <div class="form-check form-check-inline">
               <%= f.radio_button :is_active, false %>強制退会
             </div>
            </div>
          </div>
          <div class="text-center mb-4">
            <%= f.submit " 会員を編集する " ,class: "btn btn-secondary" %>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>
