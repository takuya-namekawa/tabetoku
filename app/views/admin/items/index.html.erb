<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center font-weight-bold " style="color: #6e470c; ">
      商品一覧</h4>
    </div>
  </div>
</div>
<div class="container mb-5 pb-5">
	<div class="row">
		<div class="col">
			<table class="table">
				<tr class="active" style="font-weight: bold">
					<td>商品イメージ</td>
					<td>商品名</td>
					<td>商品説明</td>
					<td>商品提供価格</td>
					<td>商品正規価格</td>
					<td>在庫数</td>
					<td>ジャンル</td>
					<td>販売ステータス</td>
				</tr>
				<br>
		    	<% @items.each do |item| %>
		    		<% if item.admin == current_admin %>
							<tr>
								<td><%= image_tag item.get_profile_image(100,100)%></td>
								<td><%= item.name %></td>
								<td><%= item.explanation %></td>
								<td><%= item.half_price %>円</td>
								<td><%= item.price %>円</td>
								<td><%= item.inventory %>個</td>
								<td><%= item.genre.name %></td>
								<td>
									<% if item.is_ordered %>
			            	<div class='text-success'>Sale</div>
			            <% else %>
			            	<div class="text-danger">Sold-Out</div>
			            <% end %>
				            <%= link_to  edit_admin_item_path(item), class: 'btn- btn-outline-dark ' do  %>
				            	商品を編集する<i class="fas fa-edit"></i>
										<% end %>
									<% end %>
								</td>
							</tr>
						<% end %>
			</table>
		</div>
	</div>
</div>




