<div class="container mt-5 mb-3 ">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center font-weight-bold " style="color: #6e470c; ">
      商品一覧</h4>
    </div>
  </div>
</div>
<div class="container mb-5 pb-5 ">
	<div class="row">
		<div class="col">
			<table class="table mb-5 pb-5 table-striped">

		    	<% @items.each do |item| %>
		    		<% if item.admin == current_admin %>
						<tr>
							<td><%= image_tag item.get_profile_image(100,100)%></td>
							<td><%= item.name %></td>

							<td>提供価格　<%= item.half_price %>円</td>
							<td>正規価格　<%= item.price %>円</td>
							<td>在庫数　<%= item.inventory %>個</td>
							<td>ジャンル　<%= item.genre.name %></td>
							<td>
								<% if item.is_ordered %>
			            	<div class='text-success'>Sale</div>
			            <% else %>
			            	<div class="text-danger">Sold-Out</div>
			            <% end %>
			            <%= link_to  edit_admin_item_path(item), class: 'btn- btn-outline-dark ' do  %>
			            	商品を編集する<i class="fas fa-edit"></i>
									<% end %>
								<% end %>
							</td>
						</tr>
					<% end %>
			</table>
		</div>
	</div>
</div>