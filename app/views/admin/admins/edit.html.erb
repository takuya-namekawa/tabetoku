<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center font-weight-bold " style="color: #6e470c; ">
      お店編集</h4>
    </div>
  </div>
</div>

<div class="container pt-3">
 <div class="row">
    <div class=" col-8 offset-md-2">
      <%= form_with model: @admin, url: admin_admin_path(@admin) do |f| %>
        <form>
          <div class="form-group row">
            <%= f.label :店舗名,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4">
              <%= f.text_field :name, autofocus: true, class:"form-control "%>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :住所,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4">
              <%= f.text_field :address, autofocus: true, class:"form-control"%>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :電話番号,class: "col-sm-3 col-form-label" %>
            <div class="col-sm-9 pl-4 ">
              <%= f.text_field :phone_number, autofocus: true, class:"form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :メールアドレス,class: "col-sm-3 col-form-label " %>
            <div class="col-sm-9 pl-4 ">
              <%= f.email_field :email, autofocus: true, class:"form-control " %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :お店ホームページ,class: "col-sm-3 col-form-label" %>
            <div class="col-sm-9 pl-4 ">
              <%= f.text_field :home_page, autofocus: true, class:"form-control" %>
            </div>
          </div>
           <div class="form-group row">
            <%= f.label :商品提供開始時間,class: "col-sm-3 col-form-label" %>
            <div class="col-sm-9 pl-4 ">
              <%= f.select :start_offer, [*0..24].map{ |o| format("%02d", o) + ":00" }%>
            </div>
          </div>
           <div class="form-group row">
            <%= f.label :商品提供終了時間,class: "col-sm-3 col-form-label" %>
            <div class="col-sm-9 pl-4 ">
              <%= f.select :end_offer,[*0..24].map{ |o| format("%02d", o) + ":00" } %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :商品画像 ,class: "col-sm-3 col-form-label " %>
            <%= f.file_field :profile_image, accept: "image/" ,class:"col-sm-8 pl-4" %>
          </div>
          <div class="text-center mb-4">
            <%= f.submit " お店を編集する " ,class: "btn btn-secondary" %>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</div>
